<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgArticle"
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/article1"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgArticle"
                android:layout_alignLeft="@id/imgArticle"
                android:layout_alignRight="@id/imgArticle"
                android:layout_alignBottom="@id/imgArticle"
                android:background="#65000000" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:maxLines="1"
                android:layout_alignBottom="@+id/imgArticle"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click to view"
                android:layout_alignBottom="@id/imgArticle"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:layout_marginBottom="2dp"
                android:textSize="6sp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
</RelativeLayout>
